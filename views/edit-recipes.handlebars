
<section class="w3-container food_form_container">
<div class="card recipes_form_card">

    <h3 class="card-header recipes_create_header" ><span style="margin-left:38%;" class="recipes_form_label_title">Edit Recipe</span></h3>
    <form class="card-body edit-recipes-form">

        <label for="recipes-name" class="form-label recipe_form_label">Name</label>
        <input name="recipes-name" type="text" value="{{recipes.name}}" class="form-input" />
       
        <label for="recipes-ingredients" class="form-label recipes_form_label">Ingredients</label>
        <input name="recipes-ingredients" type="text" value="{{recipes.ingredients}}" class="form-input" />
       
        <label for="recipes-direction" class="form-label recipes_form_label">Drections</label>
        <input name="recipes-direction" type="text" value="{{recipes.direction}}" class="form-input" />
       
        <label for="recipes-description" class="form-label recipes_form_label">Description</label>
        <input name="recipes-description" type="text" value="{{recipes.description}}" class="form-input" />

        <label for="image-url">Photo:</label><br />
    <div id="image-url-wrap">
      <input
        class="post-input"
        type="text"
        name="image-url"
        placeholder="{{post.image_url}}"
      />&nbsp;or&nbsp;<button id="upload-image">Upload New Photo</button>
    </div>


    <img class="place-image" src="{{post.image_url}}"/>
    </br>
       
        <button type="submit" class="btn recipes_form_label_button" style="margin:8px 0;border:2px solid rgba(0, 0, 0, 0.316);">Update Recipe</button>
        <button type="button" class="delete-recipes-btn btn recipes_form_label_button" style="margin:8px 0;background-color:rgba(255, 0, 0, 0.83);border:2px solid rgba(0, 0, 0, 0.316);">Delete Recipe</button>
    </form>
</div>

{{> comments recipes.comments}}
<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"
></script>

<script src="/javascript/edit-recipes.js"></script>
<script src="/javascript/delete-recipes.js"></script>
</section>